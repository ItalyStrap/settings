{
    "name": "italystrap/settings",
    "description": "Settings API for WordPress",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "overclokk",
            "email": "info@overclokk.net",
            "homepage": "https://www.italystrap.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.0",
        "italystrap/cleaner": "^1.1",
        "italystrap/config": "^2.1",
        "italystrap/fields": "^2.0",
        "italystrap/view": "^1.1"
    },
    "require-dev": {
        "lucatume/wp-browser": "~2.2",
        "lucatume/function-mocker-le": "^1.0",
        "italystrap/debug": "~2.0",
        "wp-coding-standards/wpcs": "^2.1",
        "phpcompatibility/php-compatibility": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "phpstan/phpstan": "^0.11.16",
        "szepeviktor/phpstan-wordpress": "^0.3.0",
        "rdlowrey/auryn": "^1.4",
        "redux-framework/redux-framework": "^3.6",
        "tareq1988/wordpress-settings-api-class": "^1.2",
        "typisttech/wp-better-settings": "^0.14.0",
        "rockschtar/wordpress-settings": "^0.13.0",
        "objectivco/wordpress-simple-settings": "^0.7.3",
        "michaeluno/admin-page-framework": "^3.8",
        "wpdesk/wp-settings": "^2.0",
        "twindigital/wordpress-settings-api-class": "^1.3",
        "mundschenk-at/wp-settings-ui": "^1.1",
        "dwnload/wp-settings-api": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ItalyStrap\\I18N\\": "src/I18N/",
            "ItalyStrap\\Settings\\": "src/Settings/"
        }
    },
    "scripts": {
        "check": [
            "phpcs -p -s --standard=phpcs.xml src",
            "phpstan analyse"
        ],
        "test": [
            "test"
        ]
    },
    "support"    : {
        "issues": "https://github.com/ItalyStrap/settings/issues",
        "source": "https://github.com/ItalyStrap/settings"
    }
}
